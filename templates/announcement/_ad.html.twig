{% set url = path('ads_show',{"slug": ad.slug}) %}
                <div class="col-md-4">
                    <div class="card bg-light border-secondary mb-3">
                        <div class="card-header text-center">
                            {{ ad.roomNb }} rooms, <strong> {{ ad.price }} DT/Month </strong> <br>
                            <small>Not yet rated</small>
                        </div>
                        <a href="{{ url }}" style="max-width: 348px">
                            <img src="{{ ad.coverImage }}" alt="coverImageLoading"
                                 style="max-width: 348px;min-height: 250px" class="thumbnail img-fluid">
                        </a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="{{ url }}">
                                    {{ ad.title }}
                                </a>
                            </h4>
                            <hr>
                            <p class="card-text">
                                {{ ad.description | slice(3,100) }}
                            </p>
                            <a href="{{ url }}" class="btn btn-info">Learn more..</a>

                        </div>
                    </div>
                </div>